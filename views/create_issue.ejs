<link rel="stylesheet" href="/css/createissue.css">

<div id="create-issue">
    
    <form action="/project/newbug" id="create-issue-form" method="post">
        <label for="title">Title      </label>
        <input type="text" name="title" id="title"  placeholder="Title for your Bug">

        <label for="description">Description</label>
        <textarea name="description" id="description" cols="30" rows="5" placeholder="Tell us about your Bug..."></textarea>
       
        <label for="author">Author Name</label>
        <input type="text" name="author" id="author" placeholder="Name">

        <button type="submit">Create new Bug
            <i class="fa-solid fa-bug"></i>
        </button>
    </form>
</div>